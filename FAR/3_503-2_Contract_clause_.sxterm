[{"Name": "3.503-2 Contract clause.", "Content": "The contracting officer shall insert the clause at 52.203-6, Restrictions on Subcontractor Sales to the Government, in solicitations and contracts exceeding the simplified acquisition threshold. For the acquisition of commercial items, the contracting officer shall use the clause with its Alternate I.", "Notes":"", "Uid":"db40fad6-5eb1-47be-8416-80bb70ba551f"}]